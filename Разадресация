#include <iostream>
#include <cstdlib>
using namespace std;

int main()
{
    // инициализация указателя на целочисленное значение
    int *a = new int (50);
    // переменной b присваивается значение, хранящееся по адресу указателя a
    int b = *a;
    cout << "adress \t *a\t b\n";
    /* выводим: адрес, хранящийся в указателе a; значение, хранящееся по адресу указателя a; значение переменной b */
    cout << a << "\t" << a << "\t" << b << endl;
    *a = 100; // изменяем значение, хранящееся по адресу указателя a
    cout << a << "\t" << *a << "\t" << b << endl;
    return 0;
}
