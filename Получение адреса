#include <iostream>
#include <cstdlib>
using namespace std;

int main()
{
    int b = 50;
    int *a = &b; // в указатель a записали адрес переменной b 
    cout << "adress \t *a\t b\n";
    cout << a << "\t" << *a << "\t" << b << endl;
    b += 10; // 1
    cout << a << "\t" << *a << "\t" << b << endl;
    *a = 100; // 2 
    cout << a << "\t" << *a << "\t" << b << endl;
    return 0;
}
